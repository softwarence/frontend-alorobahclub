#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running Pre-Commit Checks..."

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# 1Ô∏è‚É£ Block any JS/JSX files
JS_FILES=""
for file in $STAGED_FILES; do
  case "$file" in
    *.js|*.jsx)
      JS_FILES="$JS_FILES$file"$'\n'
      ;;
  esac
done

if [ -n "$JS_FILES" ]; then
  echo "‚ùå JS/JSX files detected in commit:"
  echo "$JS_FILES"
  echo "‚ùå Convert them to TypeScript (.ts/.tsx) before committing."
  exit 1
fi

# 2Ô∏è‚É£ Run lint-staged (TS only)
yarn lint-staged

# 3Ô∏è‚É£ Optional TypeScript type check
yarn tsc --noEmit

echo "‚úÖ Pre-commit checks passed!"
